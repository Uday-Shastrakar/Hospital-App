<?xml version="1.0" encoding="utf-8"?>
<androidx.drawerlayout.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/drawerLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg1">

    <!-- Main content layout -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="24dp">

        <!-- Room Number Section -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/roomNumberLabel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginEnd="16dp"
                android:text="Room No:"
                android:textColor="#000000"
                android:textSize="20sp" />

            <TextView
                android:id="@+id/roomNumber"
                android:layout_width="491dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:text="101"
                android:textColor="#000000"
                android:textSize="34sp" />
        </LinearLayout>

        <!-- Patient Name Section -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/patientNameLabel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginEnd="16dp"
                android:text="Patient Name:"
                android:textColor="#000000"
                android:textSize="20sp" />

            <TextView
                android:id="@+id/patientName"
                android:layout_width="491dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:text="Uday Shastrakar"
                android:textColor="#000000"
                android:textSize="34sp" />
        </LinearLayout>

        <!-- Doctor Name Section -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="57dp"
            android:layout_marginTop="16dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/doctorNameLabel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginEnd="16dp"
                android:text="Doctor Name:"
                android:textColor="#000000"
                android:textSize="20sp" />

            <TextView
                android:id="@+id/doctorName"
                android:layout_width="454dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:text="Dr. Smithy"
                android:textColor="#000000"
                android:textSize="34sp" />
        </LinearLayout>

        <!-- Room Status Section -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="59dp"
            android:layout_marginTop="16dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/roomStatusLabel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginEnd="16dp"
                android:text="Room Status:"
                android:textColor="#000000"
                android:textSize="20sp" />

            <TextView
                android:id="@+id/roomStatus"
                android:layout_width="133dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:text="Occupied"
                android:textColor="#000000"
                android:textSize="24sp" />
        </LinearLayout>
    </LinearLayout>

    <!-- Sidebar -->
    <LinearLayout
        android:id="@+id/drawer"
        android:layout_width="250dp"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="16dp"
        android:layout_gravity="end"
        android:background="#CCFFFF">

    <!-- Title for the sidebar -->
        <TextView
            android:id="@+id/sidebarTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Scheduled Queue"
            android:textColor="#000000"
            android:textSize="20sp"
            android:layout_marginBottom="16dp" />

        <!-- RecyclerView for Scheduled Queue (Doctor/Nurse Visits) -->
        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/scheduledQueueDrawerRecyclerView"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />
    </LinearLayout>

</androidx.drawerlayout.widget.DrawerLayout>
